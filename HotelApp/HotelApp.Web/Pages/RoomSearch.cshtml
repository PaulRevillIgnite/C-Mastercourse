@page
@model HotelApp.Web.Pages.RoomSearchModel
@{
    ViewData["Title"] = "Room Search";
}

<h1>Room Search</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.StartDate" />
        <input asp-for="@Model.StartDate" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.EndDate" />
        <input asp-for="@Model.EndDate" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.AvaliableRoomTypes?.Count > 0)
{
    <br />
    <h2>Results</h2>
    <table class="table">
        <thread>
            <tr>
                <th>Room Type</th>
                <th>Room Type</th>
                <th></th>
            </tr>
        </thread>
        <tbody>
            @foreach (var room in Model.AvaliableRoomTypes)
            {
                <tr>
                    <td>
                        <strong>@room.Title</strong><br />
                        @room.Description
                    </td>
                    <td>@string.Format("{0:C}", @room.Price)</td>
                    <td><a href="">Book Now</a></td>
                </tr>
            }
        </tbody>
    </table>
}